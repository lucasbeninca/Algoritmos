algoritmo "somadedoisnumeros"
var
numero1, numero2 : inteiro
soma : inteiro

inicio

escreva("digite o primerio numero da soma ")
leia(numero1)
escreva("digite o segundo numero da soma ")
leia (numero2)
soma <- (numero1 + numero2) ;
escreva("a soma do primeiro numero e mais o segundo numero e ", soma)

fimalgoritmo